let x = "Maryjose"
let y = "Humberto"
function comparisonWord(x, y) {
  if(x > y) {
    console.log ("The drivers name goes first")
} else if (x < y) {
    console.log("Yo, the navigator goes first definitely")
} else if (x = y) {
    console.log("What?! you both got the same name?")
} 
} 
comparisonWord("Maryjose" , "Humberto")
